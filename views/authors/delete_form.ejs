<form action="/authors/<%= author.id %>?_method=DELETE" method="POST" style="display: inline;">
    <button type="submit" 
            onclick="return confirm('Are you sure you want to delete <%= author.name %>? This action cannot be undone.')"
            style="padding: 8px 16px; background: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 14px; transition: background-color 0.3s;"
            onmouseover="this.style.backgroundColor='#c82333'"
            onmouseout="this.style.backgroundColor='#dc3545'">
        🗑️ Delete Author
    </button>
</form>